pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
        sh 'mvn clean install'
        sh 'echo "public class HelloWorld { public static void main(String[] args) { System.out.println(\"Hello, World from Java!\"); } }" > HelloWorld.java'
        sh 'javac HelloWorld.java'
        sh 'java HelloWorld'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
        sh 'npm install'
        sh 'echo "console.log(\"Hello, World from Node.js!\")" > hello.js'
        sh 'node hello.js'
      }
    }
  }
}
